# =============================================================================
# CẤU HÌNH CHROMADB
# =============================================================================

# Chế độ ChromaDB: "local" hoặc "cloud"
CHROMA_MODE=local

# =============================================================================
# CHROMADB LOCAL (khi CHROMA_MODE=local)
# =============================================================================
# Thư mục lưu trữ dữ liệu ChromaDB local
CHROMA_DIR=./chroma_data

# =============================================================================
# CHROMADB CLOUD (khi CHROMA_MODE=cloud)
# =============================================================================
# Host của ChromaDB Cloud
CHROMA_CLOUD_HOST=your-chroma-cloud-host.chromadb.com
# Port (thường là 443 cho HTTPS)
CHROMA_CLOUD_PORT=443
# Sử dụng SSL (true/false)
CHROMA_CLOUD_SSL=true
# API Key từ ChromaDB Cloud
CHROMA_CLOUD_API_KEY=your-api-key-here
# Tenant ID
CHROMA_CLOUD_TENANT=your-tenant-id
# Database name
CHROMA_CLOUD_DATABASE=your-database-name

# =============================================================================
# CẤU HÌNH EMBEDDING
# =============================================================================
# Loại model embedding: "sentence_transformers" hoặc "gemini"
EMBEDDING_TYPE=sentence_transformers

# Model embedding cho sentence transformers
MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# Gemini API Key (cần thiết khi EMBEDDING_TYPE=gemini)
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# CẤU HÌNH KHÁC
# =============================================================================
# Chuỗi kết nối SQL Server
SQLSERVER_CONN=DRIVER={ODBC Driver 17 for SQL Server};SERVER=your-server;DATABASE=your-db;UID=your-user;PWD=your-password

# Server configuration
HOST=0.0.0.0
PORT=8008

# Threshold và TopK cho tìm kiếm
THRESHOLD=0.7
TOPK=3
